{% extends '::layout.html.twig' %}

{% block content %}
<div class="body-content">

    {% set mediaSize = 'reference' %}


    {% for image in images %}
        {% if category == 'wam' or category == 'the-inbounder' %}
            {% set sizes = ['small','small2','small3','small4','small5','big','large'] %}
            {% set mediaSize = random(sizes) %}
        {% endif %}
        <img alt="boobs" src="{% path image , mediaSize %}"/>
    {% endfor %}

    <div>
        {% if "niggas" == app.request.attributes.get('category') %}
        <img class="blackRabo" src="{{ asset('media/nigga.png') }}">
        {% else %}
        <img class="myRabo" src="{{ asset('media/chuck_approves.gif') }}">
        {% endif %}
    </div>
</div>

{% endblock %}
